<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MeterView">
        <attr name="DashBoardColor" format="color" />
        <attr name="ScaleTextColor" format="color" />
        <attr name="CheckScaleTextColor" format="color" />
        <attr name="SourceCurveColor" format="color" />
        <attr name="SourceTextColor" format="color" />
        <attr name="PointColor" format="color" />

        <attr name="CheckScaleTextSize" format="dimension"/>
        <attr name="ScaleTextSize" format="dimension"/>
        <attr name="SourceTextSize" format="dimension"/>
        <attr name="PointSize" format="dimension"/>
        <attr name="SourceCurveSize" format="dimension"/>
        <attr name="BoardCurveSize" format="dimension"/>
        
        <attr name="ScaleTextInterval" format="dimension"/>
        <attr name="SourceTextInterval" format="dimension"/>

        <attr name="Rate" format="integer"/>

        <attr name="ShowSource" format="boolean"/>
        <attr name="ShowScaleText" format="boolean"/>
        <attr name="ShowPoint" format="boolean"/>
        <attr name="ShowSourceCurve" format="boolean"/>
        <attr name="ShowCheckScaleText" format="boolean"/>

        <attr name="StartAnglee" format="float"/>
        <attr name="SweepAnglee" format="float"/>


        <attr name="SourceShowType" format="enum">
            <enum name="number" value="0"/>
            <enum name="scaleText" value="1"/>
        </attr>

        <attr name="SourceTextAlign" format="enum">
            <enum name="center" value="0"/>
            <enum name="start" value="1"/>
            <enum name="end" value="2"/>
        </attr>
    </declare-styleable>
</resources>