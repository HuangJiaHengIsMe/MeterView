<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <hbb.view.meterview.MeterView
            android:id="@+id/meter"
            android:layout_width="300dp"
            android:layout_height="300dp"

            app:DashBoardColor="#1C65CE"
            app:ScaleTextColor="#888585"
            app:SourceCurveColor="#09C0E5"
            app:CheckScaleTextColor="#000"
            app:PointColor="#09C0E5"
            app:SourceTextColor="#000"

            app:CheckScaleTextSize="18dp"
            app:SourceTextSize="30dp"
            app:ScaleTextSize="14dp"

            app:BoardCurveSize="2dp"
            app:SourceCurveSize="10dp"
            app:PointSize="5dp"

            app:ScaleTextInterval="30dp"

            app:Rate="20"

            app:ShowSource="true"

            app:StartAnglee="-180"
            app:SweepAnglee="250"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>